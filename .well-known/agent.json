  "capabilities": [
    {
      "id": "chemistry-query",
      "name": "Chemistry Query",
      "description": "PubChem compound lookup, RDKit molecular properties, 2D visualization, BRICS retrosynthesis, synthesis route planning, Morgan fingerprints, similarity search.",
      "input": {
        "type": "object",
        "required": ["smiles"],
        "properties": {
          "smiles": { "type": "string", "description": "SMILES molecular notation" },
          "compound_name": { "type": "string", "description": "Common or IUPAC name (alternative to SMILES)" },
          "actions": {
            "type": "array",
            "items": { "type": "string", "enum": ["info", "props", "draw", "retrosynthesis", "similarity", "synthesis_route"] }
          }
        }
      },
      "output": {
        "type": "object",
        "properties": {
          "molecular_weight": { "type": "number" },
          "logP": { "type": "number" },
          "tpsa": { "type": "number" },
          "hbd": { "type": "integer" },
          "hba": { "type": "integer" },
          "rotatable_bonds": { "type": "integer" },
          "aromatic_rings": { "type": "integer" },
          "smiles": { "type": "string" },
          "pubchem_cid": { "type": "integer" },
          "image_url": { "type": "string", "format": "uri" },
          "retrosynthesis": { "type": "array" },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
        }
      },
      "tier": "free",
      "avg_latency_ms": 2000,
      "data_sources": ["PubChem REST API", "ChEMBL API", "RDKit"]
    },
    {
      "id": "pharmacology",
      "name": "Pharmacology (ADME/PK)",
      "description": "Drug-likeness assessment (Lipinski Ro5, Veber rules), QED, SA Score, ADME predictions (BBB, solubility, GI absorption, CYP3A4, P-gp, plasma protein binding), PAINS alerts.",
      "input": {
        "type": "object",
        "required": ["smiles"],
        "properties": {
          "smiles": { "type": "string", "description": "SMILES molecular notation" }
        }
      },
      "output": {
        "type": "object",
        "properties": {
          "lipinski": { "type": "object" },
          "veber": { "type": "object" },
          "qed": { "type": "number" },
          "sa_score": { "type": "number" },
          "bbb_permeant": { "type": "boolean" },
          "gi_absorption": { "type": "string" },
          "solubility": { "type": "string" },
          "cyp3a4_inhibitor": { "type": "boolean" },
          "pgp_substrate": { "type": "boolean" },
          "pains_alerts": { "type": "array" },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
        }
      },
      "tier": "free",
      "avg_latency_ms": 1500,
      "data_sources": ["RDKit"]
    },
    {
      "id": "toxicology",
      "name": "Toxicology",
      "description": "Safety profiling with structural alerts, hERG risk, hepatotoxicity flags, mutagenicity assessment.",
      "input": {
        "type": "object",
        "required": ["smiles"],
        "properties": {
          "smiles": { "type": "string" }
        }
      },
      "output": {
        "type": "object",
        "properties": {
          "structural_alerts": { "type": "array" },
          "herg_risk": { "type": "string" },
          "hepatotoxicity": { "type": "string" },
          "mutagenicity": { "type": "string" },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
        }
      },
      "tier": "pro",
      "avg_latency_ms": 2000,
      "data_sources": ["RDKit", "structural alert databases"]
    },
    {
      "id": "ip-expansion",
      "name": "IP & Patent Analysis",
      "description": "FTO analysis, patent similarity search, bioisostere suggestions, derivative recommendations, patent landscape overview.",
      "input": {
        "type": "object",
        "required": ["smiles"],
        "properties": {
          "smiles": { "type": "string" },
          "target_indication": { "type": "string" }
        }
      },
      "output": {
        "type": "object",
        "properties": {
          "similar_patents": { "type": "array" },
          "fto_risk": { "type": "string" },
          "bioisosteres": { "type": "array" },
          "novel_derivatives": { "type": "array" },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
        }
      },
      "tier": "pro",
      "avg_latency_ms": 5000,
      "data_sources": ["Google Patents", "Lens.org", "RDKit"]
    },
    {
      "id": "market-intel",
      "name": "Market Intelligence",
      "description": "FDA FAERS adverse event monitoring, yearly trends, top reactions/outcomes analysis with visualization.",
      "input": {
        "type": "object",
        "required": ["drug_name"],
        "properties": {
          "drug_name": { "type": "string" },
