      "output": {
        "type": "object",
        "properties": {
          "chemistry": { "type": "object" },
          "pharmacology": { "type": "object" },
          "toxicology": { "type": "object" },
          "synthesis": { "type": "object" },
          "ip_analysis": { "type": "object" },
          "market_intel": { "type": "object" },
          "pdf_url": { "type": "string", "format": "uri" },
