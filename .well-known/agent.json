      },
      "output": {
        "type": "object",
        "properties": {
          "adverse_events": { "type": "array" },
          "yearly_trends": { "type": "object" },
          "top_reactions": { "type": "array" },
          "top_outcomes": { "type": "array" },
          "chart_urls": { "type": "array" },
