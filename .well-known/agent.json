        }
      },
      "tier": "pro",
      "avg_latency_ms": 4000,
      "data_sources": ["openFDA FAERS API"]
    },
    {
      "id": "synthesis-planning",
      "name": "Synthesis Planning",
      "description": "Retrosynthetic analysis, BRICS decomposition, forward reaction simulation, feasibility scoring with 21 named reaction templates.",
      "input": {
        "type": "object",
        "required": ["smiles"],
        "properties": {
          "smiles": { "type": "string" },
          "depth": { "type": "integer", "default": 3, "description": "Retrosynthesis recursion depth" }
        }
      },
      "output": {
        "type": "object",
        "properties": {
          "routes": { "type": "array" },
          "feasibility_scores": { "type": "array" },
          "named_reactions_used": { "type": "array" },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
        }
      },
      "tier": "pro",
      "avg_latency_ms": 3000,
      "data_sources": ["RDKit", "reaction template database"]
    },
    {
      "id": "full-pipeline",
      "name": "Full Pipeline Report",
      "description": "End-to-end: Chemistry → Pharmacology → Toxicology → Synthesis → IP → Market Intel → PDF Report. All 7 agents chained.",
      "input": {
        "type": "object",
        "required": ["smiles"],
        "properties": {
          "smiles": { "type": "string" },
          "compound_name": { "type": "string" },
          "target_indication": { "type": "string" },
          "output_format": { "type": "string", "enum": ["json", "pdf", "both"], "default": "both" }
